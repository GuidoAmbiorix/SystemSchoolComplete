@model IEnumerable<SystemSchool.Models.Alumno>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class = "btn btn-secondary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula_Alumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Alumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad_Alumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semestre_Alumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero_Alumno)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula_Alumno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Alumno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad_Alumno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semestre_Alumno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero_Alumno)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditarAlumno", new {  Matricula_Alumno=item.Matricula_Alumno }, new{@class = "btn btn-warning"}) |
               
            </td>
        </tr>
}
    </tbody>
</table>
